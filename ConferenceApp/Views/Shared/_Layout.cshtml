@using ConferenceApp.Resourses.Shared
@using ConferenceApp;
@using System.Web.Mvc
@using System.Web.Mvc.Html

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Localization.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/jquery-ui-1.10.3.min.js"></script>
    <link rel="stylesheet" href="~/Content/smoothness/jquery-ui-1.10.3.custom.css" />
    <script src="~/Scripts/Common.js"></script>
    <script src="/Scripts/fancybox/jquery.fancybox.js" type="text/javascript"></script>  
    <link href="/Scripts/fancybox/jquery.fancybox.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

</head>
<body>
    <div id="header">
        <div class="header-inner">
		<div id="login">
            @Html.Partial("_LoginPartial")
        </div>
		<div>
		    @Html.Action("MainMenu", "Menu", new { Area = "", requestArea = ViewContext.Controller.GetAreaName(), requestController = ViewContext.Controller.GetControllerName(), requestAction = ViewContext.Controller.GetActionName(), string.Empty })
		</div>
        </div>
    </div>
    <div id="pageheader">
		<div class="pageheader-inner">
			<h3>@ViewBag.Title</h3>
		</div>
    </div>
    <div class="page">
        @Html.Partial("StatusMessage")

		@if (User.Identity.IsAuthenticated)
		{
			@Html.Action("SubMenu", "Menu", new { Area = "", requestArea = ViewContext.Controller.GetAreaName(), requestController = ViewContext.Controller.GetControllerName(), requestAction = ViewContext.Controller.GetActionName(),  string.Empty })
		}
        @RenderSection("featured", required: false)
        @RenderSection("scripts", required: false)
        @RenderBody()
    </div>
    <div id="footer">
		<div class="footer-inner">
			<p>Copyright © <a href="#">Company Name</a>. All rights reserved.</p>
            <a href="~/Home/Index" ><img src="~/Images/sm.jpeg" width="80" height="80" /></a>
		</div>
    </div>
</body>
</html>
